<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.avatar_size), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content"><%= micropost.content %></span>
  <span class="timestamp">
    <%= t "microposts.time_post" %>
    <%= time_ago_in_words(micropost.created_at) %>
  </span>
  <span>
    <% if current_user?(micropost.user) %>
      <%= link_to t("users.index.delete"), micropost, method: :delete, data: { confirm: t("users.index.comfirm") } %>
    <% end %>
  </span>
</li>
